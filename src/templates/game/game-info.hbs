{{set root='..'}}
{{> header cssName='game-info'}}
<div class="main-container">
	<div class="tab-p-snbr">
		<div class="tabs-check">
			<ul class="login-company select select-tab">
				<li company="cy" class="active">사이푸스</li>
				<li company="nex">넥손손</li>
				<li company="dun">건전함</li>
			</ul>
			<div id="login">
				<div class="login-box">
					<ul class="login-detail">
						<li><input type="text" class="login-id" maxlength="64" placeholder="아이디"></li>
						<li><input type="text" class="login-pass" maxlength="64" placeholder="비밀번호"></li>
					</ul>
					<ul class="login-btn">
						<li><input type="button" style="width: 88px;height: 50px" value="로그인"></li>
					</ul>
				</div>
				<div class="checkbox">
					<ul>
						<li><input type="checkbox" style="margin-left: 20px" id="id-save"> <label class="id-save" for="id-save">아이디 저장</label></li>
						<li><input type="checkbox" style="margin-left: 7px" id="key-se"> <label class="key-se" for="key-se">키보드 보안</label></li>
					</ul>
				</div>
				<ul class="sub-box">
					<li><input type="button" style="width: 100px;height: 26px; font-size: 10px" value="회원가입"></li>
					<li><input type="button" style="width: auto;height: 26px; font-size: 8px" value="아이디|비밀번호찾기"></li>
				</ul>
			</div>
		</div>
		<div class="sub-banner-notice">
			<div class="notice-menu">
				<img src="{{root}}/img/tit_ginfo.jpg">
				<ul>
					<li>세계관</li>
					<li class="active">캐릭터</li>
					<li>게임 가이드</li>
					<li>아이템 박스</li>
				</ul>
			</div>
			<div class="sub-bnr-img" id="s1">
				<img src="{{root}}/img/sub-banner-common01.jpg">
			</div>
			<div class="sub-bnr-img" id="s2">
				<img src="{{root}}/img/sub-banner-common02.jpg">
			</div>
			<div class="sub-bnr-img" id="s3">
				<img src="{{root}}/img/sub-banner-common03.jpg">
			</div>
			<div class="sub-bnr-img" id="s4">
				<img src="{{root}}/img/sub-banner-common04.jpg">
			</div>
		</div>
	</div>
	<div class="content">
		<div class="notice-title-img">
			<img src="{{root}}/img/tit-ginfo-char.jpg" alt="캐릭터">
		</div>
		<div class="char-list-wrap">
			<div class="intro-text">
				<p class="char-txt"><span>분류 별 보기</span>  내 성향에 맞는 사이퍼를 찾아보세요.</p>
				<p class="char-btn"><img src="{{root}}/img/btn-char-option.gif"></p>
			</div>
			<div class="char-list-radio">
			</div>
		</div>
	</div>
{{> footer jsName='game-info'}}
